<script>
function r()
{
var username=document.getElementById("entry_name");
var pass=document.getElementById("entry_password");
if(username.value=="")
{
alert("请输入用户名");
username.focus();
return ;
}
else if(pass.value=="")
{
alert("请输入密码");
return;
}
else if((pass.value=="ghsbear")&&(username.value=="vivian"))
{
window.location.href='happybirthday.html';
}
else
{
alert("登录失败，请检查用户名和密码是否有误！");
return;
}
return true;
}
</script>
